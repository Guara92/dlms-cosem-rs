root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
tab_width = 4
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 120

[*.rs]
max_line_length = 100

[*.proto]
indent_size = 2
tab_width = 2

[{*.bash,*.sh,*.zsh,justfile}]
indent_size = 2
tab_width = 2

[*.sql]
indent_size = 2
tab_width = 2

[*.toml]
indent_size = 2

[{*.yaml,*.yml,pubspec.lock}]
indent_size = 2

[{*.har,*.jsb2,*.jsb3,*.json,*.jsonc,*.postman_collection,*.postman_collection.json,*.postman_environment,*.postman_environment.json,.babelrc,.eslintrc,.prettierrc,.stylelintrc,.ws-context,jest.config}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
